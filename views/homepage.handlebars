<h1 class="text-center">Post a blog!</h1>
<div class="container">
    <div class="row">
        {{#each blog}}
        <div class="col-sm-6 p-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary">created by: {{user.name}}</h6>
                    <p class="card-text">{{description}}</p>
                    <div class="text-center">
                        <h4 class="mb-5"><span class="badge bg-secondary">Goal: {{needed_funding}}</span></h4>
                        <p>
                            <a href="/project/{{id}}" class="card-link"><button class="btn btn-primary">View
                                    Blog</button></a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>